{
	"name": "@better-auth-kit/reverify",
	"version": "0.2.0",
	"description": "Prompt the user to re-verify their identity by providing a form of authentication for revalidation.",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/ping-maxwell/better-auth-kit"
	},
	"exports": {
		".": {
			"default": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./client": {
			"default": "./dist/client.js",
			"types": "./dist/client.d.ts"
		}
	},
	"scripts": {
		"dev": "bun build --entrypoints ./src/index.ts ./src/client.ts --outdir ./dist --target node --format esm --sourcemap=external --minify --packages external --watch",
		"build": "bun build.ts",
		"test": "vitest"
	},
	"keywords": ["better-auth", "reverify", "password", "plugin"],
	"author": "ping-maxwell",
	"license": "MIT",
	"devDependencies": {
		"@types/bun": "1.2.4",
		"bun-plugin-dts": "^0.3.0",
		"vitest": "^3.0.8",
		"@better-auth-kit/tests": "workspace:*"
	},
	"peerDependencies": {
		"better-auth": "^1.1.21"
	},
	"publishConfig": {
		"access": "public"
	}
}
